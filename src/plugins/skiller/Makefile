BASEDIR = ../../..
include $(BASEDIR)/etc/buildsys/config.mk
include $(BASEDIR)/etc/buildsys/lua.mk
include $(LIBSRCDIR)/utils/utils.mk

SUBDIRS = consoletool

CFLAGS  += $(CFLAGS_LUA)

LIBS_skiller = fawkescore fawkesutils fawkesnetcomm fawkeslua SkillerInterface SkillerDebugInterface
OBJS_skiller = $(patsubst %.cpp,%.o,$(patsubst qa/%,,$(subst $(SRCDIR)/,,$(realpath $(wildcard $(SRCDIR)/*.cpp)))))

OBJS_all    = $(OBJS_skiller)

INTERFACES_all = $(notdir $(patsubst %.xml,%,$(wildcard $(SRCDIR)/*.xml)))
include $(BASEDIR)/etc/buildsys/interface.mk

ifeq ($(HAVE_LUA),1)
  ifeq ($(HAVE_TOLUA),1)
    PLUGINS_all = $(PLUGINDIR)/skiller.so
  else
    WARN_TARGETS += warning_tolua
  endif
else
  WARN_TARGETS += warning_lua
endif

ifneq ($(PLUGINS_all),)
PLUGINS_all: | $(LIBS_all)

endif

ifeq ($(OBJSSUBMAKE),1)
all: $(WARN_TARGETS)

.PHONY: warning_lua warning_tolua
warning_lua:
	$(SILENT)echo -e "$(INDENT_PRINT)--> $(TRED)Omitting Skiller Plugin$(TNORMAL) (Lua >= $(LUA_VERSION) not installed)"

warning_tolua:
	$(SILENT)echo -e "$(INDENT_PRINT)--> $(TRED)Omitting Skiller Plugin$(TNORMAL) (tolua++[-devel] not installed)"
endif

include $(BASEDIR)/etc/buildsys/base.mk

